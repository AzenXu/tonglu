extends partial/layout

block content
  .container
    .location-list
      <!--{{#categories}}-->
      a(
        href="/house/{{slug}}",
        class="{{#is_active}}active{{/is_active}}",
        style="background-image: url({{url}})",
      )
        h2 {{name}}
        h3 {{slug}}
      <!--{{/categories}}-->
      <!--remove-start-->
      li(style="background-image:url(../../img/banner.jpg)")
        h2 澳洲
        h3 Australia
      li(style="background-image:url(../../img/banner.jpg)")
        h2 英国
        h3 England
      <!--remove-end-->

  .container.location
    h1 {{category}}楼盘
    ul.house-list
      <!--{{#blog}}-->
      li.house-item
        .thumbnail
          img(src="{{thumbnail}}")
        article
          h1
            a(href="{{link}}") {{full_title}}
          address {{address}}
          p.details {{main_door}}
          p.info 年均租金：
            span.price {{rent}}
          .price {{price}}
      <!--{{/blog}}-->
