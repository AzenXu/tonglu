- var base = "/wp-content/themes/tonglu";
- var ui = base + '/ui-src';

doctype html
html(lang="zh-cmn-Hans")
  head
    meta(charset="UTF-8")
    title {{title}}
    meta(name="keywords", content="{{keywords}}")
    meta(name="description", content="{{description}}")
    meta(name="author", content="Meathill, meathill@gmail.com")

    meta(name="renderer", content="webkit")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(http-equiv="Cache-Control", content="no-siteapp")
    meta(name="viewport", content="initial-scale=1, user-scalable=no")
    meta(name="format-detection", content="telephone=no")
    meta(name="screen-orientation", content="portrait")
    meta(name="google", value="notranslate")

    <!-- wp_head -->
    link(rel="shortcut icon", type="image/png", href=base + "/img/favicon.png")
    link(rel="stylesheet", href="//unpkg.com/bootstrap@4.1.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="//unpkg.com/swiper@4.4.1/dist/css/swiper.min.css")
    link(rel="stylesheet", href=base + "/style.css")

  body.____body_class
    header#header
      .container
        nav.navbar.navbar-light
          h1.visually-hidden 通路有家
          input#navbar-toggler.hide(type="checkbox")
          a.navbar-brand(href="{{home_url}}")
            img.no-lazy.logo(src=base + "/img/logo.png")

          #lang.dropdown.hide
            button#lang-dropdown.btn.btn-outline-secondary.dropdown-toggle(
            type="button",
            data-toggle="dropdown",
            aria-haspopup="true",
            aria-expanded="false",
            ) 中文
            .dropdown-menu(aria-labelledby="lang-dropdown")
              .dropdown-item 中文
              .dropdown-item English

          label.navbar-toggler(
            for="navbar-toggler",
            data-toggle="collapse",
            data-target="#navbar",
            aria-controls="#navbar",
            aria-label="展开",
          )
            span.navbar-toggler-icon

          <!--{{{nav}}}-->
          <!--remove-start-->
          ul.navbar-nav
            li.nav-item.active
              a.nav-link(href="/")
                span.cn 首页
                span.en Home
            li.nav-item.dropdown
              a#about-us.nav-link.dropdown-toggle(
                href="/business",
                role="button",
                data-toggle="dropdown",
                aria-haspopup="true",
                aria-expanded="true",
              )
                span.cn 业务介绍
                span.en Business
              .dropdown-menu(aria-labelledby="about-us")
                .container
                  a.dropdown-item.active 公司介绍
                  a.dropdown-item 海外房产销售
                  a.dropdown-item 公寓运营代理
            li.nav-item
              a.nav-link(href="/case")
                span.cn 经典案例
                span.en Case
            li.nav-item
              a.nav-link(href="/houses")
                span.cn 楼盘展示
                span.en Houses
            li.nav-item
              a.nav-link(href="/news")
                span.cn 新闻中心
                span.en News
          <!--remove-end-->

    <!--split-->
    block content

    <!--split-->
    include footer
