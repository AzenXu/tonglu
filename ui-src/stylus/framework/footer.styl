#footer
  background-color #394473
  color white
  font-size 1rem
  font-weight 200
  padding 2.8rem 0

  .container
    display flex

  p
    margin-bottom 0

  .qrcode

    img
      display block

  .info
    flex 1
    display flex
    flex-direction column
    justify-content space-between
    margin 0 1rem

    > p
      line-height 100%

      &:last-child
        padding-bottom .1rem

    .links
      display flex

      h2
        font-size 1rem
        line-height 1.5
        margin-bottom 0

      ul
        padding 0
        margin 0 0 0 1em
        list-style none
        display flex

        li + li
          margin-left .75em

        a
          color white

          &:hover
            color var(--yellow)

  .phone
    font-size 2rem
    font-weight normal

  .hint
    color #7685C8
