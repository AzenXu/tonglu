#header

  .navbar-brand
    padding 0 0 6px
    margin 0

    .logo
      height 80px

  .navbar-toggler
    display none

  .navbar
    justify-content space-between
    height 120px
    padding 0

  .navbar-nav
    display flex
    flex-direction row
    align-self flex-end
    padding-bottom 10px

  .nav-item
    width 90px
    padding-bottom 15px

    a
      display flex
      flex-direction column
      align-items center

    .cn
      font-size 20px

    .en
      font-size 14px
      font-weight 100

    span
      text-transform uppercase

    + .nav-item
      margin-left 40px

    &.active
      position relative

      &::after
        content: ''
        position absolute
        left 0
        right 0
        bottom 0
        height 8px
        overflow hidden
        border-radius 4px
        background-color $active-color
        box-shadow 0 6px 12px rgba(0, 48, 255, .5)

  @media (max-width $xs-width)
    & .navbar-toggler
      display block