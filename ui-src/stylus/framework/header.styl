#header
  .single-post &,
  .tax-house_category &
    background-color white
    box-shadow 0 .1rem .5rem rgba(0,0,0,.2)

  .navbar-brand
    padding 0 0 .3rem
    margin 0

    .logo
      height 4rem

  .navbar-toggler
    display none

  .navbar
    justify-content space-between
    height 6rem
    padding 0
    position static

  .navbar-nav
    display flex
    flex-direction row
    align-self flex-end
    padding-bottom .5rem
    margin-left auto

  .nav-item
    width 4.5rem
    padding-bottom .75rem

    > a
      color $black
      display flex
      flex-direction column
      align-items center
      transition all .5s

      &:hover
        color $active-color
        text-decoration none
        transform translateY(-.25rem)
        text-shadow 0 .2rem .2rem alpha($active-color, .25)

    .cn
      font-size 1rem

    .en
      font-size .7rem
      font-weight 100

    span
      text-transform uppercase

    + .nav-item
      margin-left 2rem

    &.active
      position relative

      &::after
        content: ''
        position absolute
        left 0
        right 0
        bottom 0
        height .4rem
        overflow hidden
        border-radius .2rem
        background-color $active-color
        box-shadow 0 .3rem .6rem rgba(0, 48, 255, .5)

  @media (max-width $xs-width)
    & .navbar-toggler
      display block

  @media (min-width $xs-width + 1px)
    & .navbar-nav .dropdown
      position static

    & .navbar-nav .dropdown-menu
      background rgba(0,0,0,.8)
      color white
      display block
      font-size 1rem
      position absolute
      top 6rem
      left 0
      width 100%
      height 0
      overflow hidden
      transition height .5s
      padding 0
      margin 0
      border none
      border-radius 0

      .container
        display flex
        justify-content flex-end
        align-items center
        height 100%

      .dropdown-item
        color gray
        width auto
        border 1px solid transparent

        &.active,
        &:hover
          color $active-color
          border 1px solid currentColor
          border-radius 1em
          background-color transparent

        + .dropdown-item
          margin-left 3.5rem

      &.dropdown-menu.show
        height 4rem

#lang
  margin-left 2rem

  .btn,
  .dropdown-menu
    font-size .7rem
