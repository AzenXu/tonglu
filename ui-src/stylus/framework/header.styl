#header
  .article &
    background-color white
    box-shadow 0 2px 11px rgba(0,0,0,.2)

  .navbar-brand
    padding 0 0 6px
    margin 0

    .logo
      height 80px

  .navbar-toggler
    display none

  .navbar
    justify-content space-between
    height 120px
    padding 0
    position static

  .navbar-nav
    display flex
    flex-direction row
    align-self flex-end
    padding-bottom 10px
    margin-left auto

  .nav-item
    width 90px
    padding-bottom 15px

    > a
      color $black
      display flex
      flex-direction column
      align-items center
      transition all .5s

      &:hover
        color $active-color
        text-decoration none
        transform translateY(-.25rem)
        text-shadow 0 4px 4px alpha($active-color, .25)

    .cn
      font-size 20px

    .en
      font-size 14px
      font-weight 100

    span
      text-transform uppercase

    + .nav-item
      margin-left 40px

    &.active
      position relative

      &::after
        content: ''
        position absolute
        left 0
        right 0
        bottom 0
        height 8px
        overflow hidden
        border-radius 4px
        background-color $active-color
        box-shadow 0 6px 12px rgba(0, 48, 255, .5)

  @media (max-width $xs-width)
    & .navbar-toggler
      display block

  @media (min-width $xs-width + 1px)
    & .navbar-nav .dropdown
      position static

    & .navbar-nav .dropdown-menu
      background rgba(0,0,0,.8)
      color white
      display block
      font-size 20px
      position absolute
      top 120px
      left 0
      width 100%
      height 0
      overflow hidden
      transition height .5s
      padding 0
      margin 0
      border none
      border-radius 0

      .container
        display flex
        justify-content flex-end
        align-items center
        height 100%

      .dropdown-item
        width auto
        border 1px solid transparent

        &.active,
        &:hover
          color $active-color
          border 1px solid currentColor
          border-radius 1em
          background-color transparent

        + .dropdown-item
          margin-left 70px

      &.dropdown-menu.show
        height 80px

#lang
  margin-left 2rem

  .btn,
  .dropdown-menu
    font-size 14px
