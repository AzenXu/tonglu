.breadcrumb
  background-color transparent
  margin 30px 0

  a
    color $black

    &:hover
      color $active-color

article.article
  font-size 1.5rem
  font-weight 200

  h1
    font-size 30px

  .info
    color #999
    font-size 1rem

  blockquote
    font-size 1rem
    font-weight 100
    padding-bottom 1.5rem
    margin-bottom 1.5rem
    border-bottom 1px solid #F3F3F3

  img
    display block
    max-width 100%

  p
    margin-bottom 1em

    &:last-child
      margin-bottom 0

  .single &
    h1,
    .info
      text-align center
