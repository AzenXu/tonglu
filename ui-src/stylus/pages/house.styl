.house
  background-color #F8F8F8

  header&
    background-color #262626
    color white
    padding 0 0 58px

  nav
    color #C6C6C6

    .breadcrumb
      margin 0

    a
      color #C6C6C6

      &:hover
        color white

  h1
    font-size 30px
    margin 0 0 1em

  .showcase
    display flex

  .slide
    width 800px

    img
      max-width 100%

    .main
      height 600px

    .img-list
      margin 15px 0 0
      padding 0
      list-style none
      display flex

      li
        flex 1
        height 111px

        + li
          margin-left 15px

      img
        width 100%
        height 100%

  .summary
    flex 1
    display flex
    flex-direction column
    margin-left 15px

    header
      background-color $active-color
      padding 1em

    .body
      background-color white
      flex 1
      margin-top 15px

  .details
    display flex
    padding-top 45px

    article
      background-color white
      font-size 18px
      line-height 2
      padding 30px 40px
      flex 1

      section
        padding-bottom 2em

        + section
          border-top 1px solid #F3F3F3
          padding-top 2em

      h2
        font-size 40px
        padding-left .5em
        position relative
        margin-bottom .5em

        &::before
          content: ''
          background-color $active-color
          position absolute
          top 2px
          left 0
          width 8px
          height 46px
          border-radius 4px
          box-shadow 0 3px 13px rgba(67,103,255,.5)

      p.lead
        font-size 20px

      img
        max-width 100%

    .qrcode
      background-color white
      margin-left 10px
      width 320px
      height 340px

      h3
        font-size 20px
        line-height 3
        text-indent 1em

      img
        width 200px
        height 200px
        display block
        margin 0 auto 13px

      p
        font-weight 100
        text-align center
