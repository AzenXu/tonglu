.article-list
  list-style none
  padding 0
  margin 0

.article-item
  display flex
  padding 20px 0

  + .article-item
    border-top 1px solid #F3F3F3

  .thumbnail
    width 400px

    img
      max-width 100%
      max-height 225px
      object-fit cover
      object-position center

  article.article
    flex 1
    margin-left 40px
    display flex
    flex-direction column
    font-size 1.25rem

    h2
      font-size 30px

    p.info
      margin-top auto
