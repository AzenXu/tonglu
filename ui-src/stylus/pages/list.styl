.article-list
  list-style none
  padding 0
  margin 0

.article-item
  display flex
  padding 1rem 0

  + .article-item
    border-top 1px solid #F3F3F3

  .thumbnail
    width 20rem

    img
      max-width 100%
      max-height 11.25rem
      object-fit cover
      object-position center

  article.article
    flex 1
    margin-left 2rem
    display flex
    flex-direction column
    font-size 1.25rem

    h2
      font-size 1.5rem

      a
        color $black

        &:hover
          color $active-color

        &:visited
          color lighten($black, 20%)

    p.info
      margin-top auto
