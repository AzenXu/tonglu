.article-list
  list-style none
  padding 0
  margin 0

.article-item
  padding 1rem 0

  + .article-item
    border-top 1px solid #F3F3F3

  .thumbnail

    img
      object-fit cover
      object-position center

  article.article
    font-size 1.25rem

    h2
      font-size 1.5rem

      a
        color $black

        &:hover
          color $active-color

        &:visited
          color lighten($black, 20%)

    p.info
      margin-top auto

  @media (max-width: $xs-width)
    flex-direction column

    .thumbnail
      margin-bottom .5em

      img
        width 100%
        height auto

    p:last-child
      margin-bottom 0

  @media (min-width $xs-width + 1px)
    display flex

    .thumbnail
      width 20rem

      img
        max-width 100%
        max-height 11.25rem

    article.article
      flex 1
      display flex
      flex-direction column
      margin-left 2rem

